<div class="container">
  <div class="row">
    <h3>Factual Predicates</h3>
    <%= form_for (@newPre), url: {action: "create"} do |f| %>
        <p>Content:</p>
        <%= f.text_field :content %>
        <%= f.submit 'Create', :class => 'button-xs' %>
    <% end %>
    <div class="column">
      <table class="table">
        <tbody>
          <% @pres.each do |pre| %>
            <tr>
              <%= render pre %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
